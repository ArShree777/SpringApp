<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
          http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
">

    <context:component-scan base-package="com.heroku.web"/><!-- jati pani xa Spring ley kata scan garney bhannera tokdeyko ho Base Package-->
    <mvc:annotation-driven/> <!--MVC kasari chinney bhanda Annotation Driven ho bhanera-->
    <mvc:resources mapping="/static/**" location="/WEB-INF/assets/"/> <!--CSS ralhnu ko lagi--><!--CSS ko mapping chai static bhanera aauney xa-->
    
    <!--MVC ko Resources mapping gareyko-->
    <!-- <bean id="default" name="/home" class="com.heroku.web.controller.DefaultController">
        "Working out=SpringFrameWork Suru ko Tarika. baneyko bela"MAPPING SPRING-MVC CONTROLLER "
    </bean>--> 
    
    
    <!--Class instantiate gareyko viewResolver=new InternalResourceViewResolver-->   
   
       
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>

    </bean>
</beans>
